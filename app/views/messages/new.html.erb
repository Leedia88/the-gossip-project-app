
 <h1>Contact Form</h1>
  <%= form_for :message do |f| %>
    <div class="col-md-6">
        <p>
         <%= f.label :recipient%> <br> 
         <%= f.select(:recipient, options_for_select(@users, :selected => params[:user_id])) %>
        </p>
         <%= f.label :email %></br>
         <%= f.text_field :email, required: true, class: "contact-form-text-area" %></br>
        <p>
         <%= f.label :content %></br>
         <%= f.text_area :content, rows: 8, cols: 40, required: true, class: "contact-form-text-area", 
            placeholder: "Send your message"%></br>
        </p>
         <%= f.submit 'Send Message', class: 'btn btn-primary' %>
        <% end %>