
<h1>Create Gossip</h1>

<%=form_for :gossip, url: gossip_index_path do |f|%>
    <%if @gossip.errors.any? %>
        <% @gossip.errors.full_messages.each do |msg| %>
        <div class="alert alert-danger"><%=msg%></div>
        <%end%>
    <%end%>
<p> <br> 
 <%= f.hidden_field(:user_id, {:value => current_user.id, :readonly => "readonly"}) %>
</p>
<p>
<%= f.label :title%> <br> 
<%= f.text_field(:title, {:class => "form-control"})%>
</p>
<p>
<%= f.label :content%> <br>
<%= f.text_area(:content, {:class => "form-control"})%>
</p>

<%= label_tag :tags%> <br> 

<%@tags.each do |tag|%>
<%= label_tag tag.id, "#{tag.title}" %>
<%= check_box_tag 'tags_id[]', tag.id%>
<%end%>

<%= text_field_tag(:tags)%>
<p>
<br><%= f.submit({:class => "card-link btn btn-light"}) %>
<%=link_to "Cancel", gossip_index_path, :class => "card-link btn btn-light"%>
</p>
<%end%>

