
<h1>Create Gossip</h1>

<%=form_for :gossip, url: gossip_index_path do |f|%>
    <%if @gossip.errors.any? %>
        <% @gossip.errors.full_messages.each do |msg| %>
        <div class="alert alert-danger"><%=msg%></div>
        <%end%>
    <%end%>
<p>
<%= f.label :user_id%> <br> 
 <%= f.select(:user_id, options_for_select(@users, :selected => params[:user_id])) %>
</p>
<p>
<%= f.label :title%> <br> 
<%= f.text_field(:title, {:class => "form-control"})%>
</p>
<p>
<%= f.label :content%> <br>
<%= f.text_area(:content, {:class => "form-control"})%>
</p>
<p>
<%= f.submit({:class => "card-link btn btn-light"}) %>
</p>
<%end%>